<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['blur',[['handleRealNameChange',['$event']]]],['input',[['__set_model',['$0','realname','$event',[]],['addressData']]]]]}}" value="{{addressData.realname}}" bindblur="__e" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['blur',[['handleMobileChange',['$event']]]],['input',[['__set_model',['$0','mobile','$event',[]],['addressData']]]]]}}" value="{{addressData.mobile}}" bindblur="__e" bindinput="__e"/></view><view class="row b-b"><text class="tit">选择地址</text><view><picker mode="multiSelector" value="{{multiIndex}}" range-key="title" range="{{multiArray}}" data-event-opts="{{[['columnchange',[['bindMultiPickerColumnChange',['$event']]]]]}}" bindcolumnchange="__e"><view class="input">{{''+addressData.address_name+''}}</view></picker></view></view><view class="row b-b"><text class="tit">详细地址</text><input class="input" type="text" placeholder="请输入详细地址" placeholder-class="placeholder" data-event-opts="{{[['blur',[['bindAddressDetailsChange',['$event']]]],['input',[['__set_model',['$0','address_details','$event',[]],['addressData']]]]]}}" value="{{addressData.address_details}}" bindblur="__e" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.is_default?true:false}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>
<view class="evaluation"><view class="product-info"><image class="product-image" mode="aspectFill" src="{{productInfo.product_picture}}"></image><view class="product-content"><text class="product-name in2line">{{productInfo.product_name}}</text><text class="product-sku-name">{{productInfo.sku_name||'基础款'}}</text><text class="product-price">{{productInfo.product_money+" * "+productInfo.num}}</text></view></view><view class="input-content"><view class="input-item"><text class="tit">快递公司</text><input type="text" placeholder="请输入快递公司" data-event-opts="{{[['input',[['handleRefundShippingCompanyChange',['$event']]]]]}}" value="{{salesReturn.refund_shipping_company}}" bindinput="__e"/></view><view class="input-item"><text class="tit">快递单号</text><input type="text" placeholder="请输入快递单号" data-event-opts="{{[['input',[['handleRefundShippingCodeChange',['$event']]]]]}}" value="{{salesReturn.refund_shipping_code}}" bindinput="__e"/></view></view><button data-event-opts="{{[['tap',[['handleSalesReturn',['$event']]]]]}}" class="confirm-btn" bindtap="__e">提交退货物流</button></view>
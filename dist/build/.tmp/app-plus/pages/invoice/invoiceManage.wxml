<view class="content"><view class="row b-b"><text class="tit">发票类型</text><radio-group data-event-opts="{{[['change',[['handleInvoiceTypeChange',['$event']]]]]}}" class="invoice-type" bindchange="__e"><block wx:for="{{invoiceType}}" wx:for-item="item" wx:for-index="index" wx:key="index"><label class="invoice-type-item"><radio class="gender-item-radio" color="#fa436a" value="{{''+item.value}}" checked="{{item.value===invoiceData.type}}"></radio><text class="gender-item-text">{{item.name}}</text></label></block></radio-group></view><view class="row b-b"><text class="tit">发票抬头</text><input class="input" type="text" placeholder="请输入发票抬头" placeholder-class="placeholder" data-event-opts="{{[['blur',[['handleTitleChange',['$event']]]],['input',[['__set_model',['$0','title','$event',[]],['invoiceData']]]]]}}" value="{{invoiceData.title}}" bindblur="__e" bindinput="__e"/></view><view hidden="{{!($root.m0===1)}}" class="row b-b"><text class="tit">发票税号</text><input class="input" type="text" placeholder="请输入发票税号" placeholder-class="placeholder" data-event-opts="{{[['blur',[['handleDutyParagraphChange',['$event']]]],['input',[['__set_model',['$0','duty_paragraph','$event',[]],['invoiceData']]]]]}}" value="{{invoiceData.duty_paragraph}}" bindblur="__e" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{invoiceData.is_default?true:false}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>